<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#303F9F" /> <!-- Darker blue when pressed -->
            <stroke android:width="2dp" android:color="#000000" /> <!-- Black border -->
            <corners android:radius="8dp" /> <!-- Slightly rounded corners -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#3F51B5" /> <!-- Blue background -->
            <stroke android:width="2dp" android:color="#000000" /> <!-- Black border -->
            <corners android:radius="8dp" /> <!-- Slightly rounded corners -->
        </shape>
    </item>
</selector>
