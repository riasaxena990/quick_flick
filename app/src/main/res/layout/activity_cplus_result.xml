<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingTop="16dp"
    android:background="@color/white"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context=".java.java_result">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lootie4"
        android:layout_width="3000dp"
        android:layout_height="110dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="-50dp"
        app:lottie_rawRes="@raw/result"/>

    <TextView
        android:id="@+id/tvres1"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:fontFamily="@font/slogan_font"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:text="Large text "
        android:layout_marginTop="180dp"
        android:background="#f4bbff"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="20sp"/>


    <TextView
        android:id="@+id/tvres2"
        android:layout_below="@+id/tvres1"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:fontFamily="@font/slogan_font"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:text="Large text "
        android:layout_marginTop="10dp"
        android:background="#f4bbff"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="20sp"/>


    <TextView
        android:id="@+id/tvres3"
        android:layout_below="@+id/tvres2"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/slogan_font"
        android:layout_centerHorizontal="true"
        android:text="Large text "
        android:layout_marginTop="10dp"
        android:background="#f4bbff"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="20sp"/>



    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/tvres3"
        android:layout_centerHorizontal="true"
        >
        <com.mikhaellopez.circularprogressbar.CircularProgressBar
            android:id="@+id/cplusprogressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cpb_background_progressbar_color="#dc2517"
            app:cpb_background_progressbar_width="10dp"
            app:cpb_progress_direction="to_right"
            app:cpb_progress_max="5"
            app:cpb_progressbar_color="#1bbd22"
            app:cpb_progressbar_width="10dp"
            app:cpb_round_border="false"/>

        <TextView
            android:id="@+id/resulttext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text=""
            android:textColor="@color/black"
            android:textSize="22dp"
            />

    </RelativeLayout>

    <Button
        android:id="@+id/buttonrestart"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginLeft="90dp"
        android:background="@drawable/border2"
        android:fontFamily="@font/slogan_font"
        android:layout_alignParentBottom="true"
        android:text="Go To Main Menu"
        android:textColor="@color/black"
        android:layout_marginBottom="30dp"
      />


</RelativeLayout>