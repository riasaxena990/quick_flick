<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="20dp"
    android:gravity="center"
    tools:context=".register">

    <!-- Register Title Text -->
    <TextView
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-50dp"
        android:fontFamily="@font/poppins_italic"
        android:text="Please enter your details"
        android:textColor="#191970"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"/>

    <!-- Full Name Label -->
    <TextView
        android:id="@+id/text_fullName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Full Name"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <!-- Full Name Input -->
    <EditText
        android:id="@+id/fullName"
        android:layout_width="300dp"
        android:layout_marginStart="-25dp"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:hint="Enter your full name"
        android:background="@drawable/border"
        android:padding="12dp"
        android:textColor="@color/black"
        android:inputType="text"/>

    <!-- Email Label -->
    <TextView
        android:id="@+id/text_userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/poppins_regular"
        android:text="User Name"
        android:layout_marginStart="10dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <!-- Email Input -->
    <EditText
        android:id="@+id/userName"
        android:layout_width="300dp"
        android:layout_marginStart="-25dp"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:hint="Enter your email ID"
        android:background="@drawable/border"
        android:padding="12dp"
        android:textColor="@color/black"
        android:inputType="text"/>

     <!-- Password Label -->
    <TextView
        android:id="@+id/textView_passwrd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Password"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginStart="10dp"
        android:textStyle="bold"/>


    <!-- Password Input -->
    <EditText
        android:id="@+id/passwrd"
        android:layout_width="300dp"
        android:layout_marginStart="-25dp"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:hint="Enter your password"
        android:background="@drawable/border"
        android:padding="12dp"
        android:textColor="@color/black"
        android:inputType="textPassword"/>

    <!-- Mobile Label -->
    <TextView
        android:id="@+id/textView_mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Rewrite password"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginStart="10dp"/>

    <!-- Mobile Input -->
    <EditText
        android:id="@+id/retypePasswrd"
        android:layout_width="300dp"
        android:layout_marginStart="-25dp"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:hint="Enter your password"
        android:background="@drawable/border"
        android:padding="12dp"
        android:textColor="@color/black"
        android:inputType="textPassword"/>

    <!-- Go to Login Button -->
    <Button
        android:id="@+id/newlogin"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#0000cd"
        android:text="Go to Login Page"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"/>

</LinearLayout>
